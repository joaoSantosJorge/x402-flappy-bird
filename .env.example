# Environment Variables for Deployment
# Copy this to .env and fill in your values

# ===== REQUIRED =====

# OPTION 1: Encrypted Keystore (RECOMMENDED for production)
# Path to your encrypted Foundry keystore file
# Local example: /home/youruser/.foundry/keystores/your-key-name
# Render: Upload keystore file as Secret File and set path like /etc/secrets/keystore
KEYSTORE_PATH=/path/to/your/keystore/file
KEYSTORE_PASSWORD=your_keystore_password_here

# OPTION 2: Plain Private Key (NOT RECOMMENDED for production, only for dev/testing)
# Your wallet private key (without 0x prefix)
# WARNING: Use encrypted keystore instead for production!
# OWNER_PRIVATE_KEY=your_private_key_here

# Your deployed FlappyBirdPrizePool contract address
FLAPPY_BIRD_CONTRACT_ADDRESS=0xYourContractAddress

# ===== OPTIONAL =====

# Environment (development or production)
# development = 1 minute cycles, production = 7 day cycles
NODE_ENV=development

# Override cycle duration in days (e.g., 7 for 7 days, 0.00069 for 1 minute)
# If not set, uses NODE_ENV to determine (1 min for dev, 7 days for prod)
CYCLE_DURATION_DAYS=7

# Number of winners (1-10)
NUMBER_OF_WINNERS=3

# Fee percentage in basis points (1000 = 10%)
FEE_PERCENTAGE=1000

# Base network RPC URL
# Testnet: https://sepolia.base.org
# Mainnet: https://mainnet.base.org
BASE_RPC_URL=https://sepolia.base.org

# USDC contract address (optional, defaults to Base Sepolia USDC)
USDC_ADDRESS=0x036CbD53842c5426634e7929541eC2318f3dCF7e

# ===== FIREBASE =====

# Path to Firebase service account JSON file
# Local: ./serviceAccountKey.json
# Render: /etc/secrets/serviceAccountKey.json (set as Secret File in Render)
GOOGLE_APPLICATION_CREDENTIALS=./serviceAccountKey.json

# Etherscan API key for contract verification (optional)
ETHERSCAN_API_KEY=your_etherscan_api_key_here
